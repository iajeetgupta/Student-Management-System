<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddStudent">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="361dp"
        android:layout_height="299dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:layout_marginStart="100dp"
            android:text="@string/please_login"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/numberEt"
            android:layout_width="340dp"
            android:layout_height="55dp"
            android:layout_marginVertical="90dp"
            android:layout_marginStart="10dp"
            android:ems="15"
            android:hint="@string/registration_number"
            android:inputType="number"
            android:textColorHint="@color/black"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/dateEt"
            android:layout_width="340dp"
            android:layout_height="55dp"
            android:layout_marginVertical="155dp"
            android:layout_marginStart="10dp"
            android:ems="15"
            android:hint="@string/date_of_birth"
            android:inputType="date"
            android:textColorHint="@color/black"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="212dp"
            android:layout_height="50dp"
            android:layout_marginVertical="230dp"
            android:layout_marginStart="80dp"
            android:text="@string/sign_in"
            android:textSize="18sp"/>

        <ImageButton android:id="@+id/datePickerButton" android:layout_width="40dp" android:layout_height="40dp" android:background="@color/white" android:layout_marginStart="295dp" android:layout_marginTop="160dp" app:srcCompat="@drawable/ic_baseline_calendar_month_24" android:contentDescription="TODO" />

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>