<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SwitchAccounts">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="330dp"
        android:layout_height="302dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="219dp">

            <com.google.android.material.navigation.NavigationView
                android:layout_width="174dp"
                android:layout_height="149dp"
                android:layout_marginVertical="45dp"
                android:layout_marginStart="85dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="45dp"
                    android:padding="5dp"
                    app:shapeAppearanceOverlay="@style/circular"
                    app:srcCompat="@drawable/img"
                    app:strokeColor="#090909"
                    app:strokeWidth="1dp" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="139dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="85dp"
                    android:text="AJEET KUMAR GUPTA"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </com.google.android.material.navigation.NavigationView>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8sp"
                android:layout_marginStart="90dp"
                android:text="Switch Accounts"
                android:textColor="@color/black"
                android:textColorHighlight="@color/white"
                android:textCursorDrawable="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.cardview.widget.CardView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageButton3"
            android:layout_width="57dp"
            android:layout_height="45dp"
            android:layout_marginVertical="220dp"
            android:layout_marginStart="136dp"
            android:padding="5dp"
            app:shapeAppearanceOverlay="@style/circular"
            app:srcCompat="@drawable/ic_baseline_add_circle_outline_24" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="268dp"
            android:layout_marginStart="8dp"
            android:text="Add New Student Profile"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>